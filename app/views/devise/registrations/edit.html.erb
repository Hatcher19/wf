<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

	<%= f.input :name, label: false, placeholder: "Name" %>
  <%= f.input :email, label: false, placeholder: "Your Email" %>
  <%= f.input :password, label: false, placeholder: "New Password", autocomplete: "off" %>
  <%= f.input :password_confirmation, label: false, placeholder: "New Password Confirmation", autocomplete: "off" %>
  <%= f.input :current_password, label: false, placeholder: "Current Password" %>

  <div class="form-actions">
    <%= f.submit "Update", class: "btn btn-primary"%>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>