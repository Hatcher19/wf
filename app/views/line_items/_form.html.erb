<%= simple_form_for(@line_item) do |f| %>
  <%= f.error_notification %>
		<table class="table table-striped">
			<div class="form-inputs">
    		<%= f.input :quantity %>
  		</div>
  		<div class="form-inputs">
    		<%= f.input :style %>
  		</div>
			<div class="form-actions">
    		<%= f.button :submit %>
  		</div>
		</table>
<% end %>