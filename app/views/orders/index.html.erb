<center><h1>Production</h1></center>

<table class="table table-striped">
  <tr>
    <th>Type</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.project_type %></td>
    <td><%= link_to '', order, class: "icon-eye-open" %></td>
    <td><%= link_to '', edit_order_path(order), class: "icon-edit" %></td>
    <td><%= link_to '', order, class: "icon-remove", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to '+', new_order_path, class: "btn btn-primary btn-mini" %>
